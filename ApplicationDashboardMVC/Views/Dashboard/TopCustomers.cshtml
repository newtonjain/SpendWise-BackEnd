@model IEnumerable<ApplicationDashboardMVC.Models.DailyPredictiveViewModel>

<div class="list-group">

    @foreach (var predictiveItem in Model)
    {
    <a href="#" class="list-group-item">
        <div style="display: inline-block;width: 60px;">
            <img class="rounded img-thumbnail" src="@string.Format("/Images/Customers/{0}", predictiveItem.ItemImage)" alt="" style="width:50px; height:60px;" />
        </div>
        @predictiveItem.ItemName
        <span class="label label-info"> @string.Format("{0} : {1}", "Amount", predictiveItem.AmountSpend) </span>
        <span class="label label-info"> @string.Format("{0} : {1}", "Category", predictiveItem.ItemCategory) </span>
        <span class="label label-success" style="margin-left: 10px;"> @string.Format("{0} : {1}", "Suggestion", predictiveItem.Suggestion) </span>
    </a>
    }

</div>
